{
	"compilerOptions": {
		/* Projects */

		/* Language and Environment */
		"target": "ES2024" /* Set the JavaScript language version for emitted JavaScript and include compatible library declarations. */,

		/* Modules */
		"module": "Node18" /* Specify what module code is generated. */,
		"moduleResolution": "node16",
		"resolveJsonModule": true,

		/* JavaScript Support */

		/* Emit */
		"outDir": "dist",
		/* Interop Constraints */
		"esModuleInterop": true /* Emit additional JavaScript to ease support for importing CommonJS modules. This enables 'allowSyntheticDefaultImports' for type compatibility. */,
		"forceConsistentCasingInFileNames": true /* Ensure that casing is correct in imports. */,
		"allowSyntheticDefaultImports": true,

		/* Type Checking */
		"strict": true /* Enable all strict type-checking options. */,
		"allowUnreachableCode": false /* Prevents compilation if there is unreachable code. */,
		"allowUnusedLabels": false /* Prevents compilation if there are unused labels */,
		"exactOptionalPropertyTypes": true /* Stricter rules around types/interfaces with a ? prefix */,
		"noFallthroughCasesInSwitch": true /* reports errors if there are fallthrough cases in switch statements. */,
		"noImplicitOverride": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,

		/* Completeness */
		"skipLibCheck": true /* Skip type checking all .d.ts files. */
	},
	"include": ["src"],
	"exclude": ["node-modules"]
}
